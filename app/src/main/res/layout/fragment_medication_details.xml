<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_medication_details"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:paddingBottom="16dp" />

            <!-- Medication Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"
                android:backgroundTintMode="src_over"
                android:clipToOutline="true"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/white"
                android:layoutDirection="ltr"
                android:gravity="start"
                android:scrollbarSize="5dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbarFadeDuration="1000"
                android:scrollbarAlwaysDrawVerticalTrack="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_name"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_dosage"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/textDose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_medication_type"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/textNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_schedule"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/textSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:paddingBottom="2dp"/>
                <TextView
                    android:id="@+id/textNextTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</layout>
