<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@android:color/white">

        <!-- Main Title -->
        <TextView
            android:id="@+id/textTakenLogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_medication_log"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textTakenLogSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_keep_track"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textTakenLogTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Section Label -->
        <TextView
            android:id="@+id/textLogSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_recent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/textTakenLogSubtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- RecyclerView for Taken Log -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTakenLog"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/textLogSection"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Empty state message -->
        <TextView
            android:id="@+id/textEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_no_data"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textLogSection"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
