<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_100">

        <!-- Main Title -->
        <TextView
            android:id="@+id/textTakenLogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_medication_log"
            style="@style/TitleMedium"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textTakenLogSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_keep_track"
            style="@style/TitleSmall"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section Label -->
                <TextView
                    android:id="@+id/textLogSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_recent"
                    style="@style/LabelStyle"
                    android:layout_margin="16dp" />

                <!-- RecyclerView for Taken Log -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerTakenLog"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp" />

                <!-- Empty state message -->
                <TextView
                    android:id="@+id/textEmptyState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_no_data"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>